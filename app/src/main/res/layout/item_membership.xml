<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="membership"
            type="com.choi.cafe.data.model.Membership" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="2dp"
            android:layout_marginVertical="1dp"
            android:background="#2962FF"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_membershipId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@{membership.membershipID}"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text_membershipPoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@{membership.membershipPoint}"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textOwner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@{membership.owner.name}"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</layout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/text_register_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이름" />

    <EditText
        android:id="@+id/edit_register_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/text_register_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="성별" />

    <EditText
        android:id="@+id/edit_register_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/text_register_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="나이" />

    <EditText
        android:id="@+id/edit_register_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/text_register_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="직급" />

    <EditText
        android:id="@+id/edit_register_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/text_register_serial_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="고유번호" />

    <EditText
        android:id="@+id/edit_register_serial_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/text_register_tel_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="전화번호" />

    <EditText
        android:id="@+id/edit_register_tel_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/button_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:text="등록" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_membership_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="membership id" />

    <EditText
        android:id="@+id/edit_membership_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/text_membership_point"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="membership point" />

    <EditText
        android:id="@+id/edit_membership_point"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/text_owner_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="owner id" />

    <EditText
        android:id="@+id/edit_owner_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="confirm" />
    </LinearLayout>
</LinearLayout>